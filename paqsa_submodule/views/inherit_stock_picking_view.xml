<odoo>
  <data>
    <record id="view_stock_picking_form_inherit" model="ir.ui.view">
      <field name="name">inherit.stock.picking</field>
      <field name="model">stock.picking</field>
      <field name="inherit_id" ref="stock.view_picking_form"/> 
      <field name="arch" type="xml">
        <xpath expr="//field[@name='show_check_availability']" position = "replace"> 
          <field name="show_check_availability" invisible="1"/>
        </xpath>
        <xpath expr="//field[@name='immediate_transfer']" position = "replace"> 
            <field name="immediate_transfer" invisible="1"/>
        </xpath>
        <xpath expr="//button[@name='action_assign']" position = "replace"> 
          <button name="action_assign" string="Check Availability" type="object" class="oe_highlight" groups="base.group_user"/>
        </xpath>
        <xpath expr='//notebook/page[4]' position='after'>
          <page string="total">
            <field name='total_sum'>
              <tree>
                <field name='product'/>
                <field name="total_weight_per_uom"/>
              </tree>
              <form>
                <group>
                  <field name='product'/>
                  <field name="total_weight_per_uom"/>
                </group>
              </form>
            </field>
          </page>          
        </xpath>   
      </field>
    </record>

  </data>
</odoo>